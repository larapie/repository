{
    "name": "larapie/repository",
    "description": "Repository for the larapie framework",
    "keywords": [
        "larapie",
        "repository",
        "rest",
        "api",
        "laravel",
        "php"
    ],
    "homepage": "https://github.com/larapie/repository",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthony Vancauwenberghe",
            "email": "anthony.vanc@gmail.com",
            "homepage": "https://github.com/larapie",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "laravel/framework": "^5.8",
        "ext-json": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Larapie\\Repository\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Larapie\\Repository\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
